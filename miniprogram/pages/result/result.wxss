.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.celebration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-top: 10rpx;
}

.loading, .error {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #666666;
}

.retry-btn {
  background-color: #6c5ce7;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.retry-btn::after {
  border: none;
}

.result-content {
  max-width: 600rpx;
  margin: 0 auto;
}

.info-card, .score-card, .description-card, .advice-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  padding: 40rpx;
}

.test-info {
  text-align: center;
}

.test-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
}

.test-date {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.score-card {
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.score-circle {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.score-number {
  font-size: 64rpx;
  font-weight: bold;
  line-height: 1;
}

.score-total {
  font-size: 32rpx;
  opacity: 0.8;
  margin-left: 8rpx;
}

.score-level {
  font-size: 36rpx;
  font-weight: 500;
  opacity: 0.9;
}

.card-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.description-text, .advice-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.action-buttons {
  margin-top: 40rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background-color: #6c5ce7;
  color: #ffffff;
}

.action-btn.primary:active {
  background-color: #5a4fd1;
}

.action-btn.secondary {
  background-color: #f8f9fa;
  color: #666666;
  border: 2rpx solid #dee2e6;
}

.action-btn.secondary:active {
  background-color: #e9ecef;
}

.secondary-actions {
  display: flex;
  gap: 20rpx;
}

.secondary-actions .action-btn {
  flex: 1;
  margin-bottom: 0;
}

.btn-text {
  font-weight: 500;
}

/* 分享弹窗样式 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.share-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 40rpx;
  max-width: 400rpx;
  width: 100%;
  overflow: hidden;
}

.share-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.share-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  font-size: 32rpx;
  color: #999999;
  padding: 10rpx;
  line-height: 1;
}

.share-body {
  padding: 20rpx 0;
}

.share-btn {
  width: 100%;
  height: 88rpx;
  background-color: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
}

.share-btn::after {
  border: none;
}

.share-btn:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.share-btn:active {
  background-color: #f8f9fa;
}

.share-icon {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.share-text {
  font-size: 28rpx;
  color: #333333;
}