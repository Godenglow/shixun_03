.container {
  min-height: 100vh;
  background-color: #f8f9fa;
}

.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.join-date {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-stats {
  display: flex;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-prompt {
  text-align: center;
  padding: 100rpx 40rpx;
}

.prompt-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

.login-btn {
  background-color: #6c5ce7;
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 60rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  background-color: #5a4fd1;
}

.records-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 0 30rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.section-count {
  font-size: 24rpx;
  color: #999999;
}

.loading, .error {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #666666;
}

.retry-btn {
  background-color: #6c5ce7;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.retry-btn::after {
  border: none;
}

.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.record-item:active {
  background-color: #f8f9fa;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.test-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.record-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.record-date {
  font-size: 24rpx;
  color: #999999;
}

.record-score {
  background-color: #e8f4f8;
  color: #5a9fd4;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.record-score-badge {
  background-color: #6c5ce7;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.score-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.record-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  font-size: 28rpx;
  color: #cccccc;
  font-weight: 300;
}

.empty {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.go-test-btn {
  background-color: #6c5ce7;
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.go-test-btn::after {
  border: none;
}

.load-more {
  text-align: center;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.load-text {
  font-size: 26rpx;
  color: #6c5ce7;
  font-weight: 500;
}